<?xml version="1.0"?>
<ruleset name="FRS User Profiles">
	<description>WordPress coding standards for FRS User Profiles plugin</description>

	<!-- What to scan - specific directories only -->
	<file>includes</file>
	<file>database/Migrations</file>
	<file>frs-wp-users.php</file>
	<file>plugin.php</file>

	<!-- Exclude paths -->
	<exclude-pattern>*/node_modules/*</exclude-pattern>
	<exclude-pattern>*/vendor/*</exclude-pattern>
	<exclude-pattern>*/assets/*</exclude-pattern>
	<exclude-pattern>*/views/*</exclude-pattern>
	<exclude-pattern>*/tests/*</exclude-pattern>
	<exclude-pattern>*/database/Seeders/*</exclude-pattern>
	<exclude-pattern>*/libs/*</exclude-pattern>
	<exclude-pattern>*.js</exclude-pattern>
	<exclude-pattern>*.css</exclude-pattern>

	<!-- How to scan -->
	<arg value="sp"/> <!-- Show sniff and progress -->
	<arg name="basepath" value="."/><!-- Strip the file paths down to the relevant bit -->
	<arg name="colors"/>
	<arg name="extensions" value="php"/>
	<arg name="parallel" value="8"/><!-- Enables parallel processing when available for faster results. -->

	<!-- Rules: Check PHP version compatibility -->
	<config name="testVersion" value="8.1-"/>

	<!-- Rules: WordPress Coding Standards -->
	<rule ref="WordPress-Core">
		<exclude name="WordPress.Files.FileName.InvalidClassFileName"/>
		<exclude name="WordPress.Files.FileName.NotHyphenatedLowercase"/>
		<exclude name="Generic.Arrays.DisallowShortArraySyntax"/>
	</rule>

	<rule ref="WordPress-Docs"/>
	<rule ref="WordPress-Extra">
		<exclude name="WordPress.Files.FileName"/>
	</rule>

	<!-- Allow short array syntax -->
	<rule ref="Generic.Arrays.DisallowLongArraySyntax"/>

	<!-- Check for PHP cross-version compatibility -->
	<config name="minimum_supported_wp_version" value="6.0"/>

	<!-- Rules: PSR-12 for modern PHP -->
	<rule ref="PSR12">
		<exclude name="PSR12.Files.FileHeader.SpacingAfterBlock"/>
		<exclude name="PSR12.Classes.OpeningBraceSpace"/>
	</rule>

	<!-- Enforce short array syntax -->
	<rule ref="Generic.Arrays.DisallowLongArraySyntax"/>

	<!-- Allow type hints -->
	<rule ref="Squiz.Commenting.FunctionComment.MissingParamComment">
		<severity>0</severity>
	</rule>
</ruleset>
